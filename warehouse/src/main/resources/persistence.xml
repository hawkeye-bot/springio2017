<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/persistence"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<persistence-unit name="warehouse-jpa" transaction-type="JTA">
		<class>com.acme.warehouse.domain.AcmeMessage</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.target-database" value="HSQL" />
			<property name="eclipselink.target-server" value="com.acme.warehouse.config.JtaTransactionController" />
			<property name="eclipselink.cache.type.default" value="NONE" />
			<property name="eclipselink.weaving" value="static" />
			<property name="show-sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>